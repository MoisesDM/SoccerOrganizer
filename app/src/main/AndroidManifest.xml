<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soccer_organizer.soccerorganizer">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuSecundario" />
        <activity android:name=".ArbritosActivity" />
        <activity android:name=".ListaEquiposActivity" />
        <activity android:name=".ListaJugadoresActivity" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".UbicacionCanchaActivity" />
        <activity android:name=".RegistroResultadosActivity" />
        <activity android:name=".BienvenidoDtDueActivity" />
        <activity android:name=".MenuDTActivity" />
        <activity android:name=".RegistraJugadoresActivity" />
        <activity android:name=".TablaGeneralActivity" />
        <activity android:name=".RolesActivity" />
        <activity android:name=".MenuJugadoresActivity"></activity>
        <activity android:name=".CanchasActivity"></activity>
        <activity android:name="com.soccer_organizer.soccerorganizer.AdministradorLigaActivity"
            android:label="@string/app_name"/>
        <activity android:name="com.soccer_organizer.soccerorganizer.MenuDuenoLigaActivity"
            android:label="@string/app_name"/>
        <activity android:name="com.soccer_organizer.soccerorganizer.AdministradorRolesActivity"
            android:label="@string/app_name"/>
    </application>
</manifest>